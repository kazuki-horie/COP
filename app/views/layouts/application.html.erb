<!DOCTYPE html>
<html>
<head>
  <title>ホーリー</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" <%= link_to "TOP", "http://localhost:3000/topics", :class => 'btn btn-danger' %></a><a class="navbar-brand"><%= yield :search %></a>
    
    
    </div>
    <div class="collapse navbar-collapse">
      <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          <strong><%= link_to current_user.username, edit_user_registration_path, :class => 'navbar-link' %></strong>
          <%= image_tag current_user.icon, width: '50' %>
          
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'btn btn-danger'  %>
          <font color="#ffffff"><%= link_to t('.new', :default => t("helpers.links.アップロード")),
            new_topic_path, :class => 'btn btn-primary' %></font>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, :class => 'btn btn-danger'  %>
        <% end %>
        
      </p>
    </div>
  </div>
</nav>

<div class="container">

<%= yield %>
</div>

<footer>
  <div class="container">
    ホーリーwith ABE
  </div>
</footer>



</body>
</html>
