<%= form_for @topic, :html => { :class => "form-horizontal topic" } do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @topic.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="control-group">
    <div class="field">
      <%= f.label :タイトル %><br>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="control-group">
    <div class="field">
      <%= f.label :概要 %><br>
      <%= f.text_area :description %>
    </div>
  </div>



  <div class="control-group">
    <div class="field">
      <%= f.label :動画 %><br>
      <%= f.file_field :video %>
    </div>
  </div>



  <div class="actions">
    <%= f.submit 'アップロード', :class => 'btn btn-primary' %>

     <%= link_to t('.cancel', :default => t("helpers.links.キャンセル")),
            topics_path, :class => 'btn btn-default' %>
  </div>
<% end %>
