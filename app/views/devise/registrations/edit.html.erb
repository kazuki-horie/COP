<h2>アカウント編集 </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :メールアドレス %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :ユーザネーム %><br />
  <%= f.text_field :username, autofocus: true %></div>

  <div><%= f.label :アイコン画像 %><br />
   <%= f.file_field :icon %></div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= f.label :新しいパスワード %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.label :現在のパスワード %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %></div>

  <div><%= f.submit "変更" %></div>
<% end %>

<h3>アカウントを削除する</h3>

<%= button_to "削除する", registration_path(resource_name), data: { confirm: "本当にいいですか?" }, method: :delete %>

<%= link_to "戻る", :back %>
